<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="AnimalThingBase" ADogSaidBody="LegsArms">
    <defName>Centaur</defName>
    <label>centaur</label>
    <description>A fast, tough, intelligent and independent animal. Centaurs are most often found grazing in arid grasslands. Centaurs are extremely versatile and can serve well in combat, as pack animals, for their milk and wool, and as companions.</description>
    <statBases>
      <MoveSpeed>5.2</MoveSpeed>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <ComfyTemperatureMax>40</ComfyTemperatureMax>
      <MarketValue>888</MarketValue>
    </statBases>
    <tools>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.6</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>22</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.6</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>22</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>left hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>CentaurMilk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>25</milkAmount>
      </li>
      <li Class="CompProperties_Shearable">
        <woolDef>HairCentaur</woolDef>
        <shearIntervalDays>25</shearIntervalDays>
        <woolAmount>100</woolAmount>
      </li>
    </comps>
    <race>
      <herdAnimal>true</herdAnimal>
      <body>Centaur</body>
      <baseBodySize>1.8</baseBodySize>
      <baseHealthScale>1.75</baseHealthScale>
      <baseHungerRate>0.8</baseHungerRate>
      <foodType>VegetarianRoughAnimal</foodType>
      <wildness>0.25</wildness>
      <petness>0.5</petness>
      <leatherDef>Leather_Centaur</leatherDef>
      <meatLabel>centaur meat</meatLabel>
      <gestationPeriodDays>30</gestationPeriodDays>
      <trainability>Advanced</trainability>
      <packAnimal>true</packAnimal>
      <lifeExpectancy>55</lifeExpectancy>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(3, 1)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <nameOnTameChance>0.1</nameOnTameChance>
      <nameOnNuzzleChance>0.35</nameOnNuzzleChance>
      <wildBiomes>
        <Tundra>0</Tundra>
        <IceSheet>0</IceSheet>
        <SeaIce>0</SeaIce>
        <TropicalRainforest>0.05</TropicalRainforest>
        <TemperateForest>0.05</TemperateForest>
        <BorealForest>0</BorealForest>
        <AridShrubland>0.4</AridShrubland>
        <Desert>0.05</Desert>
        <ExtremeDesert>0</ExtremeDesert>
        <TemperateSwamp>0.05</TemperateSwamp>
        <ColdBog>0</ColdBog>
        <TropicalSwamp>0.05</TropicalSwamp>
      </wildBiomes>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.25</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>1.0</minAge>
        </li>
      </lifeStageAges>
      <nuzzleMtbHours>18</nuzzleMtbHours>
      <herdMigrationAllowed>true</herdMigrationAllowed>
      <makesFootprints>true</makesFootprints>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
		<li>AnimalCommon</li>
		<li>AnimalFarm</li>
		<li>AnimalExotic</li>
    </tradeTags>
  </ThingDef>
