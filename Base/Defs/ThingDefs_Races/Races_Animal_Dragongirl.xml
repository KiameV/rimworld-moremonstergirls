<Defs>
  <ThingDef ParentName="AnimalThingBase" ADogSaidBody="LegsArmsTail">
    <defName>Dragongirl</defName>
    <label>dragonoid</label>
    <description>Dragonoids are a very powerful combat animal. Their bodies are covered in thick defensive scales and they can tear their prey apart with their teeth and claws. They are most common in arid regions.</description>
    <statBases>
      <MoveSpeed>4.70</MoveSpeed>
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
      <ComfyTemperatureMin>-20</ComfyTemperatureMin>
      <MarketValue>1100</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>DragonMilk</milkDef>
        <milkIntervalDays>2</milkIntervalDays>
        <milkAmount>8</milkAmount>
      </li>
      <li Class="CompProperties_Shearable">
        <woolDef>DragongirlScales</woolDef>
        <shearIntervalDays>30</shearIntervalDays>
        <woolAmount>120</woolAmount>
      </li>
    </comps>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>18</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>Dragongirl</body>
      <baseBodySize>1.8</baseBodySize>
      <baseHungerRate>0.6</baseHungerRate>
      <baseHealthScale>3.2</baseHealthScale>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0.025</manhunterOnTameFailChance>
      <petness>0.05</petness>
      <herdAnimal>false</herdAnimal>
      <predator>true</predator>
      <maxPreyBodySize>1.5</maxPreyBodySize>
      <foodType>CarnivoreAnimal, OvivoreAnimal</foodType>
      <leatherDef>Leather_Dragon</leatherDef>
      <gestationPeriodDays>50</gestationPeriodDays>
      <wildBiomes>
        <Tundra>0.00</Tundra>
        <IceSheet>0.00</IceSheet>
        <SeaIce>0.00</SeaIce>
        <TropicalRainforest>0.00</TropicalRainforest>
        <TemperateForest>0.01</TemperateForest>
        <BorealForest>0.00</BorealForest>
        <AridShrubland>0.03</AridShrubland>
        <Desert>0.02</Desert>
        <ExtremeDesert>0.00</ExtremeDesert>
        <TemperateSwamp>0.1</TemperateSwamp>
      </wildBiomes>
      <wildness>0.65</wildness>
      <trainability>Advanced</trainability>
      <meatLabel>dragon meat</meatLabel>
      <nuzzleMtbHours>40</nuzzleMtbHours>
      <lifeExpectancy>100</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>1</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>2</minAge>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
      <li>BadassAnimal</li>
    </tradeTags>
  </ThingDef>

