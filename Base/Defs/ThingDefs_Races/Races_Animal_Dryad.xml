<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="AnimalThingBase" ADogSaidBody="LegsArms">
    <defName>Dryad</defName>
    <label>dryad</label>
    <description>A forest-dwelling cousin of the centaur. Dryads are smaller and more docile, but quickly grow long, silky hair that can be used as wool.</description>
    <statBases>
      <MoveSpeed>5.4</MoveSpeed>
      <ComfyTemperatureMin>-30</ComfyTemperatureMin>
      <MarketValue>950</MarketValue>
    </statBases>
    <tools>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.6</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>22</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.6</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>22</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>left hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>DryadMilk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>25</milkAmount>
      </li>
      <li Class="CompProperties_Shearable">
        <woolDef>HairDryad</woolDef>
        <shearIntervalDays>15</shearIntervalDays>
        <woolAmount>100</woolAmount>
      </li>
    </comps>
    <race>
      <herdAnimal>true</herdAnimal>
      <body>Dryad</body>
      <baseBodySize>1.5</baseBodySize>
      <baseHealthScale>1.60</baseHealthScale>
      <baseHungerRate>0.7</baseHungerRate>
      <foodType>VegetarianRoughAnimal</foodType>
      <wildness>0.10</wildness>
      <petness>0.5</petness>
      <leatherDef>Leather_Dryad</leatherDef>
      <meatLabel>dryad meat</meatLabel>
      <gestationPeriodDays>30</gestationPeriodDays>
      <trainability>Advanced</trainability>
      <packAnimal>true</packAnimal>
      <lifeExpectancy>55</lifeExpectancy>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(3, 1)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <nameOnTameChance>0.3</nameOnTameChance>
      <nameOnNuzzleChance>0.5</nameOnNuzzleChance>
      <wildBiomes>
        <Tundra>0</Tundra>
        <IceSheet>0</IceSheet>
        <SeaIce>0</SeaIce>
        <TropicalRainforest>0.25</TropicalRainforest>
        <TemperateForest>0.35</TemperateForest>
        <BorealForest>0.35</BorealForest>
        <AridShrubland>0</AridShrubland>
        <Desert>0</Desert>
        <ExtremeDesert>0</ExtremeDesert>
        <TemperateSwamp>0.18</TemperateSwamp>
        <ColdBog>0</ColdBog>
        <TropicalSwamp>0.11</TropicalSwamp>
      </wildBiomes>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.25</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>1.0</minAge>
        </li>
      </lifeStageAges>
      <nuzzleMtbHours>18</nuzzleMtbHours>
      <herdMigrationAllowed>true</herdMigrationAllowed>
      <makesFootprints>true</makesFootprints>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
    </tradeTags>
  </ThingDef>
