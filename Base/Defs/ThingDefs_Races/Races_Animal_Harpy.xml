<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="AnimalThingBase" ADogSaidBody="LegsArmsTail">
    <defName>Harpy</defName>
    <label>harpy</label>
    <description>An omnivorous creature that appears as a human woman with wings, talons and a beak. Harpies produce eggs and live in arid regions. In combat, they are delicate, but fast with powerful attacks. They reproduce quickly and can be extremely dangerous in large groups. Their feathers can be used for clothing, similar to wool.</description>
    <statBases>
      <MoveSpeed>6.2</MoveSpeed>
      <ComfyTemperatureMin>-12</ComfyTemperatureMin>
      <ComfyTemperatureMax>40</ComfyTemperatureMax>
      <MarketValue>450</MarketValue>
    </statBases>
    <race>
      <body>Harpy</body>
      <herdAnimal>true</herdAnimal>
      <predator>true</predator>
      <maxPreyBodySize>0.5</maxPreyBodySize>
      <baseBodySize>0.8</baseBodySize>
      <baseHungerRate>0.4</baseHungerRate>
      <baseHealthScale>1</baseHealthScale>
      <foodType>OmnivoreRoughAnimal</foodType>
      <leatherDef>Leather_Harpy</leatherDef>
      <petness>0.25</petness>
      <wildness>0.5</wildness>
      <nuzzleMtbHours>24</nuzzleMtbHours>
      <herdMigrationAllowed>true</herdMigrationAllowed>
      <packAnimal>false</packAnimal>
      <lifeExpectancy>60</lifeExpectancy>
      <trainability>Advanced</trainability>
      <meatLabel>harpy meat</meatLabel>
      <manhunterOnTameFailChance>0.05</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.1</manhunterOnDamageChance>
      <mateMtbHours>6</mateMtbHours>
      <wildBiomes>
        <Tundra>0</Tundra>
        <TropicalRainforest>0.05</TropicalRainforest>
        <TemperateForest>0.05</TemperateForest>
        <BorealForest>0</BorealForest>
        <AridShrubland>0.4</AridShrubland>
        <Desert>0.25</Desert>
        <ExtremeDesert>0.15</ExtremeDesert>
        <TemperateSwamp>0</TemperateSwamp>
        <ColdBog>0</ColdBog>
        <TropicalSwamp>0</TropicalSwamp>
      </wildBiomes>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.4</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.8</minAge>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>EggHarpyUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>EggHarpyFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>10</eggLayIntervalDays>
        <!--<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>-->
        <eggCountRange>1</eggCountRange>
      </li>
      <li Class="CompProperties_Shearable">
        <woolDef>HarpyFeathers</woolDef>
        <shearIntervalDays>10</shearIntervalDays>
        <woolAmount>100</woolAmount>
      </li>
    </comps>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>11</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>11</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>

