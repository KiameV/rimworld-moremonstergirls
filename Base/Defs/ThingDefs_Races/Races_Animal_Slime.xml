<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="AnimalThingBase" ADogSaidBody="Limbless">
    <defName>Slime</defName>
    <label>slime</label>
    <description>A gooey blob shaped into the form of a human. Slimes can appear and survive in wide range of enviroments, eat anything, and propogate quickly. Red slimes leave behind a goo that is used for it's medicinal properties. They are known to attack humans, and might have developed their unique form as a sort of disguise.Slimes are slow-moving, but hard to kill - amorphous body takes many hits until destroyed and their victims appears intoxicated.</description>
    <statBases>
      <MoveSpeed>2.0</MoveSpeed>
      <ComfyTemperatureMin>-30</ComfyTemperatureMin>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
      <MarketValue>500</MarketValue>
      <ArmorRating_Blunt>2.5</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.75</ArmorRating_Sharp>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>GooSlimeRed</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>5</milkAmount>
      </li>
    </comps>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>22</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>poison bite</label>
        <capacities>
          <li>ToxicBite</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>22</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <race>
      <body>Slime</body>
      <ageGenerationCurve>
        <points>
          <li>0.1,0</li>
          <li>0.5,15</li>
          <li>5,45</li>
          <li>10,25</li>
          <li>15,0</li>
        </points>
      </ageGenerationCurve>
      <herdAnimal>true</herdAnimal>
      <predator>true</predator>
      <maxPreyBodySize>1.5</maxPreyBodySize>
      <baseBodySize>1.0</baseBodySize>
      <baseHungerRate>0.45</baseHungerRate>
      <baseHealthScale>2</baseHealthScale>
      <foodType>OmnivoreRoughAnimal, DendrovoreAnimal</foodType>
      <leatherDef>Leather_Slime</leatherDef>
      <petness>0</petness>
      <wildness>0.7</wildness>
      <nuzzleMtbHours>48</nuzzleMtbHours>
      <herdMigrationAllowed>true</herdMigrationAllowed>
      <packAnimal>false</packAnimal>
      <lifeExpectancy>15</lifeExpectancy>
      <trainability>Intermediate</trainability>
      <meatLabel>slime goo</meatLabel>
      <manhunterOnTameFailChance>0.05</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.1</manhunterOnDamageChance>
      <gestationPeriodDays>10</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>0.5,0</li>
          <li>1,1</li>
          <li>3,1</li>
          <li>3.5,0</li>
        </points>
      </litterSizeCurve>
      <mateMtbHours>6</mateMtbHours>
      <wildBiomes>
        <Tundra>0.0001</Tundra>
        <IceSheet>0.0001</IceSheet>
        <SeaIce>0.0001</SeaIce>
        <TropicalRainforest>0.0001</TropicalRainforest>
        <TemperateForest>0.0001</TemperateForest>
        <BorealForest>0.0001</BorealForest>
        <AridShrubland>0.0001</AridShrubland>
        <Desert>0.0001</Desert>
        <ExtremeDesert>0.0001</ExtremeDesert>
        <TemperateSwamp>0.0001</TemperateSwamp>
        <ColdBog>0.0001</ColdBog>
        <TropicalSwamp>0.0001</TropicalSwamp>
      </wildBiomes>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
