        <TropicalRainforest>0</TropicalRainforest>
        <TemperateForest>0.08</TemperateForest>
        <BorealForest>0.04</BorealForest>
        <AridShrubland>0</AridShrubland>
        <Desert>0</Desert>
        <ExtremeDesert>0</ExtremeDesert>
        <TemperateSwamp>0.07</TemperateSwamp>
